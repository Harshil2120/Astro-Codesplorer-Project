---
import { type CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
type Props = {
	post: CollectionEntry<'posts'>;
};

const { post } = Astro.props;
---

<article class='bg-white rounded-lg overflow-hidden shadow-lg text-black'>
	<Image src={post.data.image} alt={post.data.title} class='hover:scale-[1.03] transition duration-300 w-full h-72' />
	<div class='p-6'>
		<div class='flex flex-row items-center mb-4'>
			<p class='text-gray-500 text-sm'>
				{
					post.data.date.toLocaleDateString('en-us', {
						year: 'numeric',
						month: 'long',
						day: '2-digit'
					})
				}
			</p>
		</div>
		<h2 class='text-2xl font-bold mb-2'>{post.data.title}</h2>
	</div>
</article>
